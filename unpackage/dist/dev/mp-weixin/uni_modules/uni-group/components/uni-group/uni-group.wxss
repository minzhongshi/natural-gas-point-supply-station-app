.uni-group {
  background: #fff;
  margin-top: 10px;
}
.uni-group__title {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 15px;
  height: 40px;
  background-color: #eee;
  font-weight: normal;
  color: #666;
}
.uni-group__content {
  padding: 15px;
}
.group-conent-padding {
  padding: 0 15px;
}
.uni-group__title-text {
  font-size: 14px;
  color: #666;
}
.distraction {
  flex-direction: row;
  align-items: center;
}
.uni-group--card {
  margin: 10px;
  border-radius: 5px;
  overflow: hidden;
  box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.08);
}