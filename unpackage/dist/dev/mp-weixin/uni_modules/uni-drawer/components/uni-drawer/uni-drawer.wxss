.uni-drawer {
  display: block;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 999;
}
.uni-drawer__content {
  display: block;
  position: absolute;
  top: 0;
  width: 220px;
  bottom: 0;
  background-color: #ffffff;
  transition: transform 0.3s ease;
}
.uni-drawer--left {
  left: 0;
  transform: translateX(-100%);
}
.uni-drawer--right {
  right: 0;
  transform: translateX(100%);
}
.uni-drawer__content--visible {
  transform: translateX(0px);
}
.uni-drawer__mask {
  display: block;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.4);
  transition: opacity 0.3s;
}
.uni-drawer__mask--visible {
  display: block;
  opacity: 1;
}