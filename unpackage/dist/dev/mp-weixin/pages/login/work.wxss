page {
  background-color: #F8F8F8;
}
.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.container .input-area {
  width: 80%;
}
.container .input-area .user-icon {
  width: 100%;
  display: flex;
  justify-content: center;
}
.container .input-area .user-icon > image {
  width: 150rpx;
  height: 150rpx;
}
.container .input-area .input-text {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  margin-top: 100rpx;
}
.container .input-area .input-text .clear {
  height: 100rpx;
  display: flex;
  align-items: center;
}
.container .input-area .input-text .clear .img {
  height: 36rpx;
  width: 36rpx;
}
.container .input-area .btn {
  margin-top: 100rpx;
}
.container .input-area .btn .login-btn {
  width: 100%;
  border-radius: 20rpx;
  border: #2979ff;
  background-color: #2979ff;
  color: #3a3a3a;
}
.container .input-area .btn .able {
  width: 100%;
  height: 100rpx;
  border-radius: 20rpx;
  border: #e4e4e4;
  background-color: #FF5242;
  color: #fff;
}
.container .input-area .btn .disabled {
  width: 100%;
  height: 100rpx;
  border-radius: 20rpx;
  border: #e4e4e4;
  background-color: #FF5242;
  color: #fff;
  opacity: 0.5;
}
.container .copy-right {
  bottom: 0;
  width: 100%;
  color: #999;
  text-align: center;
  font-size: 24rpx;
}
.container .agreenment {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  margin-top: 80rpx;
  color: #FFA800;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
}
.container .agreenment text {
  font-size: 24rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}